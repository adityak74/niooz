<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->

    </style>

    <style name="HomeActivityTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="actionBarStyle">@style/MyActionBarTheme</item>
        <item name="android:actionBarStyle">@style/MyActionBarTheme</item>
    </style>

    <style name="DialogAnimation">

        <item name="android:windowEnterAnimation">@anim/push_up_in</item>
        <item name="android:windowExitAnimation">@anim/push_down_out</item>
    </style>

    <style name="MyActionBarTheme" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="android:logo">@mipmap/ic_blank_logo</item>
        <item name="android:background">@color/actionBarColor</item>
        <item name="android:displayOptions">useLogo|showHome</item>
        <item name="background">@color/actionBarColor</item>
        <item name="logo">@mipmap/ic_blank_logo</item>
        <item name="displayOptions">useLogo|showHome</item>
    </style>

</resources>
