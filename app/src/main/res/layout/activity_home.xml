<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

                <android.support.v4.widget.SwipeRefreshLayout
                    android:id="@+id/swipe"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    xmlns:tools="http://schemas.android.com/tools"
                    xmlns:android="http://schemas.android.com/apk/res/android">

                    <com.nirhart.parallaxscroll.views.ParallaxListView xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:tools="http://schemas.android.com/tools"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/news_list_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:parallax_factor="1.9"
                        app:alpha_factor="2.0"
                    />

                </android.support.v4.widget.SwipeRefreshLayout>
    <ImageButton
        android:id="@+id/imgBt"
        android:layout_width="48dp"
        android:contentDescription="Add Your News"
        android:tag="Add Your News"
        android:layout_height="48dp"
        android:layout_gravity="end|bottom"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:tint="@android:color/white"
        android:src="@android:drawable/ic_input_add"
        android:background="@drawable/oval"
        tools:ignore="RtlCompat"
        />
</FrameLayout>