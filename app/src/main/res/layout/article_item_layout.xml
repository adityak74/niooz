<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:orientation="vertical"
    android:layout_height="110dp">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="80dp"


        >

        <!-- Thumbnail Image -->
        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/articleThumbnail"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="8dp"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="8dp" />



        <!-- Rating -->
        <TextView
            android:id="@+id/rating"
            android:textColor="#000"
            android:maxLines="4"
            android:text="Sample"
            android:gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/title"
            android:layout_marginTop="1dip"
            android:layout_toRightOf="@+id/articleThumbnail"
            android:textSize="@dimen/rating" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/statsLayout"
        android:background="#00000000"
        android:gravity="right"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_alignParentRight="true"
            android:id="@+id/statsll"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@mipmap/ic_eye_open"
                android:layout_width="25dp"
                android:layout_marginRight="2dp"
                android:layout_marginLeft="2dp"
                android:layout_height="25dp" />

            <TextView
                android:id="@+id/noOfViewsTv"
                android:layout_width="wrap_content"
                android:text="20"
                android:paddingRight="2dp"
                android:paddingLeft="2dp"
                android:gravity="center"
                android:textColor="#fff"
                android:layout_height="match_parent" />
            <ImageView
                android:src="@mipmap/ic_linkssubmitted"
                android:layout_width="25dp"
                android:paddingRight="2dp"
                android:paddingLeft="2dp"
                android:layout_height="25dp" />

            <TextView
                android:id="@+id/noOfArticlesTv"
                android:layout_width="wrap_content"
                android:text="20"
                android:gravity="center"
                android:paddingRight="2dp"
                android:paddingLeft="2dp"
                android:textColor="#fff"
                android:layout_height="match_parent" />
            <ImageView
                android:src="@android:drawable/ic_menu_agenda"
                android:layout_width="25dp"
                android:paddingRight="2dp"
                android:paddingLeft="2dp"
                android:layout_height="25dp" />

            <TextView
                android:id="@+id/noOfFollowersTv"
                android:layout_width="wrap_content"
                android:text="20"
                android:gravity="center"
                android:paddingRight="2dp"
                android:paddingLeft="2dp"
                android:textColor="#000"
                android:layout_height="match_parent" />

        </LinearLayout>
        <View
            android:layout_below="@+id/statsll"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/app_color">
        </View>

    </RelativeLayout>



</LinearLayout>