<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    tools:context="in.niooz.app.AddNewsReceive">

    <EditText
        android:hint="News URL"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:padding="7dp"
        android:background="#BDBDBD"
        android:text="http://"
        android:id="@+id/urlInput"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <View
        android:id="@+id/divider"
        android:layout_below="@+id/urlInput"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#757575"
        />

    <EditText
        android:hint="Remarks"
        android:textColorHint="#555"
        android:padding="7dp"
        android:gravity="top|left|start"
        android:textColor="#000"
        android:background="#BDBDBD"
        android:drawableBottom="#00000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/divider"
        android:layout_above="@+id/submitNewsButton"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/remarksInput"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />



    <Button
        android:id="@+id/submitNewsButton"
        android:text="Submit"
        android:textColor="#fff"
        android:background="#4CAF50"
        android:height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</RelativeLayout>
