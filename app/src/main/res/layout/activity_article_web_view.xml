<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:padding="0dp"
    tools:context="in.niooz.app.ArticleWebView">

    <TextView
        android:id="@+id/sharesTv"
        android:background="#A82400"
        android:textColor="#fff"
        android:padding="2dp"
        android:text="56 shares"
        android:gravity="left|start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <WebView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/articleWebView"
        android:layout_below="@id/sharesTv"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
